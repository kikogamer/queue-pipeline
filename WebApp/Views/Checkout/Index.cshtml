@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h2>Finalizar Compra</h2>
    <div class="row">
        <div class="col-md-6">
            <h4>Resumo do Carrinho</h4>
            <div id="resumoCarrinho">
                <!-- Itens do carrinho serão inseridos aqui -->
                <p>Seu carrinho está vazio.</p>
            </div>
        </div>

        <div class="col-md-6">
            <h4>Informações de Envio</h4>
            <form>
                <div class="form-group">
                    <label for="nome">Nome Completo</label>
                    <input type="text" class="form-control" id="nome" required>
                </div>
                <div class="form-group">
                    <label for="email">E-mail</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="form-group">
                    <label for="endereco">Endereço de Envio</label>
                    <input type="text" class="form-control" id="endereco" required>
                </div>
                <div class="form-group">
                    <label for="cep">CEP</label>
                    <input type="text" class="form-control" id="cep" required>
                </div>
                <div class="form-group">
                    <label for="telefone">Telefone</label>
                    <input type="text" class="form-control" id="telefone" required>
                </div>

                <button type="submit" class="btn btn-primary mt-4">Finalizar Compra</button>
            </form>
        </div>
    </div>
</div>

<script src="~/js/carrinho.js" asp-append-version="true"></script>

<script>
    // Simulação do carrinho
    var carrinho = getCarrinho();

    function mostrarCarrinho() {
        var resumoCarrinho = document.getElementById("resumoCarrinho");
        resumoCarrinho.innerHTML = ""; // Limpar conteúdo

        var total = 0;
        carrinho.forEach(function(item) {
            var itemCarrinho = document.createElement("div");
            itemCarrinho.classList.add("produto-checkout");
            itemCarrinho.innerHTML = `<img src="images/${item.imagem}" alt="${item.produto}">
                                      <span>${item.produto} - Qtd: ${item.quantidade} - R$ ${item.preco}</span>`;
            resumoCarrinho.appendChild(itemCarrinho);
            total += item.preco;
        });

        var totalCarrinho = document.createElement("p");
        totalCarrinho.classList.add("total");
        totalCarrinho.innerHTML = `Total: R$ ${total}`;
        resumoCarrinho.appendChild(totalCarrinho);
    }

    // Chama a função para mostrar os itens do carrinho na página de checkout
    mostrarCarrinho();
</script>